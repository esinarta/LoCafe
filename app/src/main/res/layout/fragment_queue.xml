<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.queue.QueueFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/queue_queued_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <Button
            android:id="@+id/unqueue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="148dp"
            android:layout_marginTop="56dp"
            android:text="@string/queue_unqueue"
            android:textAlignment="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/queue_number" />

        <TextView
            android:id="@+id/queue_number"
            android:layout_width="208dp"
            android:layout_height="97dp"
            android:layout_marginStart="101dp"
            android:layout_marginTop="71dp"
            android:text="@string/queue_number_ph"
            android:textAlignment="center"
            android:textSize="72sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/queue_text_queued" />

        <TextView
            android:id="@+id/queue_text_queued"
            android:layout_width="340dp"
            android:layout_height="52dp"
            android:layout_marginStart="35dp"
            android:layout_marginTop="143dp"
            android:text="@string/queue_text_queued"
            android:textAlignment="textStart"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/queue_unqueued_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="77dp"
        tools:layout_editor_absoluteY="59dp">

        <TextView
            android:id="@+id/text_queue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="316dp"
            android:text="@string/queue_text_unqueued"
            android:textAlignment="center"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/queue_now"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="153dp"
            android:layout_marginTop="29dp"
            android:text="@string/queue_queuenow"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_queue" />

        <ImageView
            android:id="@+id/queue_image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:contentDescription="Account Icon"
            android:src="@drawable/ic_baseline_schedule_24"
            app:layout_constraintBottom_toTopOf="@+id/text_queue"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>